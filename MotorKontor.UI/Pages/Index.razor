                        </div>
                        <div class="card-body">
                            @if (!CustomerLeasedVehicles.Any())
                            {
                                <p><em>Loading...</em></p>
                            }
                            else
                            {
                             @foreach (Registration r in CustomerLeasedVehicles)
                                {
